@using EducaTu.Enums
@model UsuarioModel
@{
    Layout = "_LayoutDeslogado";
    ViewData["Title"] = "Cadastro";
}

<style>
    body {
        background-color: #f5f5f5;
    }
</style>

<div>
    <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="/img/educatu-logo.svg" alt="" width="120" height="120">
        <h2>Formulário de cadastro</h2>
    </div>

    <div class="row">
        <h4 class="mb-3">Dados pessoais</h4>
        <form accept-charsetclass ="row g-3" asp-controller="Login" asp-action="Cadastro" method="post">
            <div class="row">
                <div class="col-md-12 mb-3">
                    <div class="form-group">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <input type="text" asp-for="NomeCompleto" class="form-control">
                        @Html.ValidationMessageFor(x => x.NomeCompleto)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="login" class="form-label">Login</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">&#64;</span>
                            </div>
                            <input type="text" asp-for="Login" class="form-control" id="login">
                            @Html.ValidationMessageFor(x => x.Login)
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control" id="email">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>
            </div> 

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="password" asp-for="Senha" class="form-control" id="senha">
                        @Html.ValidationMessageFor(x => x.Senha)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="confirmarSenha" class="form-label">Confirme a senha</label>
                        <input type="password" asp-for="ConfirmarNovaSenha" class="form-control" id="confirmarSenha">
                        @Html.ValidationMessageFor(x => x.ConfirmarNovaSenha)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="cep" class="form-label">Cep</label>
                        <input type="text" asp-for="Cep" class="form-control" id="cep" placeholder="07805-230">
                        @Html.ValidationMessageFor(x => x.Cep)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="endereco" class="form-label">Endereço</label>
                        <input type="text" asp-for="Endereco" class="form-control" id="endereco" placeholder="Rua Mateus Marinho, 24, Faria Lima - SP">
                        @Html.ValidationMessageFor(x => x.Endereco)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="celular" class="form-label">Celular</label>
                        <input type="text" asp-for="Celular" class="form-control" id="celular" placeholder="(11) 94444-4444">
                        @Html.ValidationMessageFor(x => x.Celular)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="dataNasc" class="form-label">Data de Nascimento</label>
                        <input type="date" asp-for="DataNascimento" class="form-control">
                        @Html.ValidationMessageFor(x => x.DataNascimento)
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="sexo" class="form-label">Escolha o seu sexo</label>
                        <select asp-for="Sexo" class="form-control">
                            <option value="">Selecione</option>
                            <option value="M">Masculino</option>
                            <option value="F">Feminino</option>
                            <option value="O">Outros</option>
                        </select>
                        @Html.ValidationMessageFor(x => x.Sexo)
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="perfil" class="form-label">Tipo de perfil</label>
                        <select asp-for="Perfil" id="perfil" class="form-control">
                            <option value="">Selecione</option>
                            <option value="@PerfilEnums.Aluno">Aluno</option>
                            <option value="@PerfilEnums.Instrutor">Instrutor</option>
                        </select>
                        @Html.ValidationMessageFor(x => x.Perfil)
                    </div>
                </div>
                <div class="col-md-6" id="idPlano" style="display:none">
                    <div class="form-group">
                        <label for="idPlano" class="form-label">Escolha de plano</label>
                        <select asp-for="IdPlano" class="form-control">
                            <option value="">Selecione</option>
                            @foreach (var plano in ViewBag.Planos)
                            {
                                <option value="@plano.Id">@plano.NomePlano</option>
                            }
                        </select>
                    </div>
                </div>
            </div>

            <hr class="mb-4">

            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="same-address">
                <label class="custom-control-label" for="same-address">Aceita receber mensagens via Whatsapp e SMS da empresa EducaTu?</label>
            </div>
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="save-info">
                <label class="custom-control-label" for="save-info">Aceita termos de usabilidade da aplicação?</label>
            </div>

            <hr class="mb-4">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Salvar</button>
        </form>
    </div>

    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2024-2025</p>
    </footer>
</div>
